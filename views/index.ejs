<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="/styles/index-styles.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/1dfa82de27.js" crossorigin="anonymous"></script> 
    
    
    <%- include('./partials/head.ejs'); %>   
    
    <title>Numpy - Home</title>
</head>
<body>
    <header>
        <% if(isAuthenticated) { %> 
            <%- include('./partials/headerLogged.ejs'); %>
        <% } else {%> 
        
            <%- include('./partials/header.ejs'); %>
        <% } %> 
    </header>

    <div class="jumbotron jumbotron-fluid jumbotron-caja">
        <div class="container">
            <img class="hero-banner-imagen" src="/images/home_hero _banner.png" alt="Chica feliz de comprar en Numpy">
        </div>
          <h1 class="jumbotron-titulo">Digital Market <br> hecho a tu medida</h1>
      </div>

    <main>



        <!--Seccion 11: banner marcas-->
        <div class="tarjeta-11">
            
                <div class="div-titulo-tarjeta-11">
                    <p class="titulo-tarjeta-11">Encontrá a las <strong> +10.000 marcas</strong> que se venden en Numpy</p>
                </div>
                

            
                <div class="tarjeta-marcas">

                    
                    <article class="tarjeta-11-articulos">
                        <img class="logitech-logo" src="/images/logitech-logo.png">
                    </article>
                    <article class="tarjeta-11-articulos">
                        <img class="apple-logo" src="/images/apple-logo.png">
                    </article>
                    <article class="tarjeta-11-articulos">
                        <img class="razer-logo" src="/images/razer-logo.png">
                    </article>
                    <article class="tarjeta-11-articulos">
                        <img class="sony-logo" src="/images/sony-logo.png">
                    </article>
                    <article class="tarjeta-11-articulos">
                        <img class="cougar-logo" src="/images/cougar-logo.png">
                    </article>
                </div>
            
        </div>


        <!--Seccion 12: Imagen-->

        <div class="div-imagen-chica" >
            <img class="imagen-chica" src="/images/woman.png">
        </div>

         <!--Seccion 2: carrousel de opciones-->

         <div class="div-titulo-tarjeta-11">
            <p class="titulo-tarjeta-11 titulo-tarjeta-font">Encontrá los <strong> mejores productos</strong> digitales</p>
        </div>
        <div class="opciones-general">

            
            <article class="opciones-article">

                <% if(isAuthenticated) { %> 
                    <div>
                        <p class="opciones-texto" >Cargá tus productos y empezá a ganar ya</p>
                    </div>
                    <div>
                        <a href="/product/productAdd">
                            <button>Agregar Productos</button>
                        </a>
                        
                    </div>
                <% } else {%> 
                
                    <div>
                        <p class="opciones-texto" >Inicia sesión para tener la mejor experiencia</p>
                    </div>
                    <div>
                        <a href="/users/login">
                            <button>Iniciar Sesión</button>
                        </a>
                        
                    </div>
                <% } %> 

                
                    <img class="opciones-foto-chica" src="/images/home_chica_celebrando.png">
            </article>
            <article class="opciones-article">
                <div>
                    <p class="opciones-texto"><mark class="marca">Ratones</mark></p>
                </div>
                <div class="opciones-caja-2">
                   
                    <% mouses.forEach(product1 => { %>
                    
                        <article class="opciones-caja-2-articles">
                            <a href="/product/productDetail/<%= product1.id %> ">
                                <img class="opciones-foto-tv" src="/images/products/<%= product1.image_11 %> "  alt="<%= product1.name %>">
                            </a>

                            
                            <p class="opciones-texto-subtitulo" ><%= product1.name %></p>
                        </article>
    
                        <% }) %>

                </div>
            </article>

            
            <article class="opciones-article">
                <div>
                    <p class="opciones-texto"><mark class="marca">Teclados</mark></p>
                </div>
                <div class="opciones-caja-2">
                   
                    <% keyboards.forEach(product2 => { %>
                    
                        <article class="opciones-caja-2-articles">
                            <a href="/product/productDetail/<%= product2.id %> ">
                                <img class="opciones-foto-tv" src="/images/products/<%= product2.image_11 %> "  alt="<%= product2.name %>">
                            </a>
                            
                            <p class="opciones-texto-subtitulo" ><%= product2.name %></p>
                        </article>
    
                        <% }) %>

                </div>

            </article>
        </div>


        <!--Seccion 13: tarjetas de Combos-->

        <div class="div-titulo-tarjeta-11">
            <p class="titulo-tarjeta-11 titulo-tarjeta-font"><strong> Combos</strong> armados a tu medida</p>
        </div>


        <div class="tarjetas-combo-div">

            <% combos.forEach(product2 => { %>
                    
                <div class="card tarjeta-combos" style="width: 18rem;">
                    <img class="card-img-top" src="/images/products/<%= product2.image_11 %>" alt="<%= product2.name %>">
                    <div class="card-body">
                      <h5 class="card-title"><%= product2.name %></h5>
                      <div class="tarjeta-combos-precio">
                        <i class="fa-solid fa-tags icono-descuento"></i>
                        <p class="card-text tarjeta-precio">$ <%= product2.price_discount %></p>
                      </div>
                      <div class="tarjeta-combos-boton">
                        <a href="/product/productDetail/<%= product2.id %> ">
                            <button>Ver más ></button>
                        </a>
                        
                      </div>
                    </div>
                  </div>

                <% }) %>

            

        </div>

        



         <!--Seccion 1: banner de tarjetas-->

         <div class="div-titulo-tarjeta-11">
            <p class="titulo-tarjeta-11 titulo-tarjeta-font"><strong> Los mejores medio de </strong> pago</p>
        </div>

         <div class="tarjeta-1">
            <div class="ver-promociones-general">
                <article class="ver-promociones-tarjeta">
                    <img src="/images/visa_logo.png" alt="">
                    <p class="ver-promociones-texto">Ver promociones ></p>
                </article>
                <article class="ver-promociones-tarjeta ver-promociones-tarjeta-2">
                    <img src="/images/master_logo.png" alt="">
                    <p class="ver-promociones-texto">Ver promociones ></p>
                </article>
                <article class="ver-promociones-tarjeta ver-promociones-tarjeta-2">
                    <img src="/images/mercadopago_logo.png" alt="">
                    <p class="ver-promociones-texto">Ver promociones ></p>
                </article>
            </div>
        </div>

        <!--Seccion 4: banner delivery-->
        <section class="banner-chico-section">
            <img class="banner-chico-section-foto" src="/images/home_banner_delivery.png" alt="Chico hace delivery de Numpy">
        </section>
        <!--Seccion 5: Sillas-->
        <section>
            <div class="div-titulo-tarjeta-11">
                <p class="titulo-tarjeta-11 titulo-tarjeta-font">Descubrí las mejores<strong>ofertas</strong></p>
            </div>

            <div class="descubri-general descubri-general-izquierda">
                <article class="descubir-article descubir-article-izquierda">
                    <p class="descubit-subtitulo">OFERTAS EN SILLAS</p>
                    <p class="descubri-titulo">HASTA 30% OFF Y HASTA <br> 6X SIN INTERÉS</p>
                    <img class="descubi-foto-silla" src="/images/home_silla.png "  alt=" %>">
                    <button class="descubri-boton">Ver Más ></button>
                </article>


<article class="descubir-article descubir-article-derecha">
                    <p class="descubit-subtitulo">OFERTAS EN CPU GAMERS</p>
                    <p class="descubri-titulo">HASTA 20% OFF Y HASTA <br> 6X SIN INTERÉS</p>
                    <img class="descubi-foto-silla" src="/images/cpu_gamer.png "  alt="CPU Gamer">
                    <button class="descubri-boton">Ver Más ></button>
                </article>
            </div>
            <div class="descubri-general">
                <article class="descubir-article descubir-article-izquierda">
                    <p class="descubit-subtitulo">OFERTAS EN MONITORES</p>
                    <p class="descubri-titulo">HASTA 40% OFF Y HASTA <br> 6X SIN INTERÉS</p>
                    <img class="descubi-foto-silla" src="/images/monitor_gamer.jpeg" alt="Monitor gammer">
                    <button class="descubri-boton">Ver Más ></button>
                </article>
                <article class="descubir-article descubir-article-derecha">
                    <p class="descubit-subtitulo">OFERTAS EN CONTROLES GAMERS</p>
                    <p class="descubri-titulo">HASTA 30% OFF Y HASTA <br> 6X SIN INTERÉS</p>
                    <img class="descubi-foto-silla" src="/images/control_gamer.jpeg" alt="Control gammer">
                    <button class="descubri-boton">Ver Más ></button>
                </article>
            </div>






            
        </section>
        <!--Seccion 6: Banner recomendaciones personalizadas-->
        <div class="recomendaciones-banner-general">
            <p class="recomendaciones-banner-texto-1">Ver recomendaciones personalizdas</p>
            <a href="/users/login">
                <button>Identificate</button>
            </a>
            
            <div class="recomendaciones-banner-div-2">
                <p class="recomendaciones-banner-texto-2">¿Eres un cliente nuevo?</p>
            <a href="/register">
                <p class="recomendaciones-banner-texto-3"> Empieza aquí.</p>
            </a>
            </div>
        </div>
        <!--Seccion 7: Banner seguridad-->
        <div class="seguridad-banner-general">
            <article class="seguridad-banner-article seguridad-banner-article-izquierda">
                <img class="seguridad-banner-foto" src="/images/home_tarjeta_2.png" alt="Icono de tarjeta">
                <p class="seguridad-banner-texto-1">Elegí como pagar</p>
                <p class="seguridad-banner-texto-2">Lorem ipsum dolor sit amet, consectetur adipisci elit.</p>
                <a href="">
                    <p class="seguridad-banner-texto-3">Conocer más ></p>
                </a>
            </article>
            <article class="seguridad-banner-article seguridad-banner-article-central">
                <img class="seguridad-banner-foto" src="/images/home_tarjeta_2.png" alt="Icono de tarjeta">
                <p class="seguridad-banner-texto-1">Elegí como pagar</p>
                <p class="seguridad-banner-texto-2">Lorem ipsum dolor sit amet, consectetur adipisci elit.</p>
                <a href="">
                    <p class="seguridad-banner-texto-3">Conocer más ></p>
                </a>
            </article>
            <article class="seguridad-banner-article seguridad-banner-article-derecha">
                <img class="seguridad-banner-foto" src="/images/home_tarjeta_2.png" alt="Icono de tarjeta">
                <p class="seguridad-banner-texto-1">Elegí como pagar</p>
                <p class="seguridad-banner-texto-2">Lorem ipsum dolor sit amet, consectetur adipisci elit.</p>
                <a href="">
                    <p class="seguridad-banner-texto-3">Conocer más ></p>
                </a>
            </article>
        </div>
        
    </main>  
    <footer>
        <%- include('./partials/footer.ejs'); %>
    </footer>
    
</body>
</html>