<!DOCTYPE html>
<html lang="en">

<head>
    <link href="/styles/user-detail.css" rel="stylesheet">
    <%- include('./partials/head.ejs'); %>
</head>

<body>
    <header class="main-header">
        <%- include('./partials/header.ejs'); %>
    </header>
    <main>
        <div>
            <img src="/images/users/<%= user.image %>" alt="<%= user.image %>">
        </div>
        <div>
            <p class="name"><%= user.first_name %></p>
            <p class="last_name"><%= user.last_name %></p>
            <p class="email"><%= user.email %></p>
            <p class="category"><%= user.category %></p>
    </main>
    <footer>
        <%- include('./partials/footer.ejs'); %>
    </footer>
</body>
</html>