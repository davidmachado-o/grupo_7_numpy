                            <span class="col-min">
                                <p class="price-col4">US$ <%= product.price_discount %></p>
                                <p class="off-col4">10% OFF</p>
                            </span>
                            <p class="cuotas">12 x $3,000 sin interes</p>
                            <p class="description-col4"> <%= product.name %></p>
                        </div>
                    </article>
                </a>
                <% }) %> 

                <% monitor.forEach(product =>{ %> 
                    <a href="productDetail/10">
                    <article class="product-info">
                        <img class="game-chair" src="/images/products/<%= product.image_11 %>" alt="<%= product.name %> ">
                        <!-- <img src="/images/corazon.png" alt="heart">-->
                        <div class="col-lil4">
                            <p class="previous-col4"><del>US$ <%= product.price_current %>  </del> </p>
                            <span class="col-min">
                                <p class="price-col4">US$ <%= product.price_discount %></p>
                                <p class="off-col4">10% OFF</p>
                            </span>
                            <p class="cuotas">12 x $3,000 sin interes</p>
                            <p class="description-col4"> <%= product.name %></p>
                        </div>
                    </article>
                    </a>
                <% }) %> 
                </article>
            </section>
        </div>
    </div>
</main>
<footer>
    <%- include('./partials/footer.ejs'); %>
</footer>
</body>
</html>