                    <div class="contain-price">
                        <p class="previous-col8"><del>$ <%= product.price_current %></del> </p>
                        <p class="price-col8">$ <%= product.price_discount %></p>
                        <p class="description-col8"><%= product.name %></p>
                    </div>
                </article>
            </a>
            <%  }) %>
            <a href="productList">
            <button class="more-option">
                <span class="shadow"></span>
                <span class="edge"></span>
                <span class="front"> <img class="flechaAzul" src="/images/producto_flecha_azul.png" alt="flecha-azul">
                </span>
              </button>
              </a>
         </div>
    </div>
    <div class="contain-three">
        <h3 class="new-seccion-two">Ofertas</h3>
        <div class="col-lil8">
            <section class="anuncio">
                <p class="promotion">Productos destacados de esta semana</p>
                <a href="productList">
