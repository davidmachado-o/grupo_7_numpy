<!DOCTYPE html>
<html lang="en">

<head>
    <link href="/styles/register-styles.css" rel="stylesheet">
    <%- include('./partials/head.ejs'); %>
</head>

<body>
    <header class="main-header">
        <%- include('./partials/header.ejs'); %>
    </header>
    <main class="main-register">
        <div class="container-register">
            <div class="register-form">
                <form action="/users/register" method="POST" enctype="multipart/form-data">
                    <div class="center">
                    <div class="top-welcome">
                        <div>
                            <img class="register-image-boy" src="/images/registro_chico.png" alt="registro chico">
                        </div>
                        <div class="welcome">
                            <h3>Creá tu cuenta</h3>
                        </div>
                    </div>
                    <div class="facebook-button center">
                        <a href="/facebookLogin"><i class="fab fa-facebook-f"></i>Ingresar con Facebook</a>
                    </div>
                    <div class="google-button google-end center">
                        <a href="/googleLogin"><i class="fab fa-google"></i>Ingresar con Google +</a>
                    </div>
                    <p class="divide">o</p>
                    <div class="form-group">
                        <label for="name"></label>
                        <input type="text" name="name" id="name" class="form-control" placeholder="Tu nombre"
                            value='<%= locals.oldData ? oldData.name : null %>'>

                        <% if ( locals.errors && errors.name ){ %>
                            <p class="error">
                                <%= errors.name.msg %>
                            </p>
                            <% } %>

                    </div>
                    <div class="form-group">
                        <label for="email"></label>
                        <input type="text" name="email" id="email" class="form-control" placeholder="Correo electrónico" value='<%= locals.oldData ? oldData.email : null %>'>

                        <% if (locals.errors && errors.email) { %>
                            <p class="error">
                                <%= errors.email.msg %>
                            </p>
                            <% } %>

                    </div>
                    <div class="form-group">
                        <label for="password"></label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Contraseña (mínimo 6 caracteres)" value='<%= locals.oldData ? oldData.password : null %>'>

                        <% if (locals.errors && errors.password) { %>
                            <p class="error">
                                <%= errors.password.msg %>
                            </p>
                            <% } %>

                    </div>
                    <div class="form-group">
                        <label for="password-confirm"></label>
                        <input type="password" name="password_confirm" id="password-confirm" class="form-control"
                            placeholder="Vuelve a escribir tu contraseña" value='<%= locals.oldData ? oldData.password_confirm : null %>'>

                        <% if (locals.errors && errors.password) { %>
                            <p class="error">
                                <%= errors.password.msg %>
                            </p>
                            <% } %>

                    </div>
                    Imágen de perfil
                    <div class="form-group center-input">
                        <label for="image"></label>
                        <input id="input" type="file" name="image" accept=".jpg, .jpeg, .png, .gif" multiple></input>
                        <% if (locals.errors && errors.image) { %>
                            <p class="error">
                                <%= errors.image.msg %>
                            </p>
                            <% } %>
                    </div>
                    <div class="form-button">
                        <button class="login-button" type="submit">Continuar</button>
                    </div>
                    <div class="no-account">
                        <p class="p-no-account">¿Ya tenés un perfil personal?</p>
                        <a href="/users/login">Iniciar sesión</a>
                    </div>
                    <div>
                        <img class="register-image-girl" src="/images/registro_chica.png" alt="registro chica">
                    </div>
                    </div>
                </form>
            </div>
    </main>
    <footer>
        <%- include('./partials/footer.ejs'); %>
    </footer>
</body>

</html>